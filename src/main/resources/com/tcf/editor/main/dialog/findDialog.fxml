<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="34.0" prefWidth="375.0">
         <children>
            <Label text="查找内容:">
               <HBox.margin>
                  <Insets bottom="13.0" left="13.0" right="13.0" top="13.0" />
               </HBox.margin></Label>
            <TextField fx:id="findText" prefWidth="180.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></TextField>
            <Button fx:id="btnFind" mnemonicParsing="false" text="查找下一个">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
      <HBox prefHeight="50.0" prefWidth="383.0">
         <children>
            <CheckBox fx:id="checkCase" mnemonicParsing="false" text="区分大小写">
               <HBox.margin>
                  <Insets left="10.0" right="15.0" top="30.0" />
               </HBox.margin></CheckBox>
            <StackPane alignment="TOP_LEFT" prefHeight="40.0" prefWidth="150.0">
                <style>
                    -fx-content-display: top;
                    -fx-border-color: #CCC;
                    -fx-border-width: 1;
                </style>
               <children>
                  <Label text="方向">
                     <StackPane.margin>
                        <Insets left="20.0" />
                     </StackPane.margin>
                      <style>
                          -fx-translate-y: -10;
                          -fx-background-color: white;
                      </style>
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding>
                  </Label>
                   <RadioButton fx:id="top" mnemonicParsing="false" text="向上" StackPane.alignment="CENTER_LEFT">
                     <StackPane.margin>
                        <Insets left="10.0" />
                     </StackPane.margin>
                  </RadioButton>
                  <RadioButton fx:id="bottom" mnemonicParsing="false" selected="true" text="向下" StackPane.alignment="CENTER_RIGHT">
                     <StackPane.margin>
                        <Insets right="30.0" />
                     </StackPane.margin>
                  </RadioButton>
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </StackPane>
            <Button fx:id="btnCancel" mnemonicParsing="false" prefHeight="24.0" prefWidth="77.0" text="取消">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin></Button>
         </children></HBox>
   </children>
